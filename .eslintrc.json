{
    "env": {
        "browser": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
    ],
    "rules": {
        "react/jsx-filename-extension": [
            2, 
            { 
                "extensions": [".js", ".jsx", ".ts", ".tsx"] 
            }
        ]
    }
}
